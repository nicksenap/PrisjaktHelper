{
    "manifest_version": 2,
    "name": "Prisjakt Helper",
    "version": "1.0",
    "description": "An extension to enhance the Prisjakt experience.",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "https://www.prisjakt.nu/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.prisjakt.nu/*"],
            "js": ["content.js"]
        }
    ]
}